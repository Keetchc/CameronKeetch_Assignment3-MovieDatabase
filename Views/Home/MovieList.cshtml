@{
    ViewBag.Title = "Movie List";
    ViewBag.Header = "Movie List";
}

@model IEnumerable<CameronKeetch_Assignment3.Models.MovieResponse>;

<div>
    <h3>Joel Hilton's Movie Collection:</h3>
    <table>
        <thead>
            <tr>
                <th>Category</th>
            
            
                <th>Title</th>
            
            
                <th>Year</th>
            
            
                <th>Director</th>
            
            
                <th>Rating</th>
            
           
                <th>Edited</th>
            
            
                <th>Lent To</th>
            
            
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach(CameronKeetch_Assignment3.Models.MovieResponse movie in Model)
            {
                if (movie.Title == "Independence Day")
                {
                    //this does nothing, just excludes Independence Day from showing in the Movie List.
                }

                else
                {
                <tr>
                    <td>@movie.Category</td>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@movie.Director</td>
                    <td>@movie.Rating</td>
                    <td>@movie.Edited</td>
                    <td>@movie.LentTo</td>
                    <td>@movie.Note</td>
                </tr>
                }

            
            }
        </tbody>
    </table>
</div>
